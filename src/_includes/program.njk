<section id="{{program.acronym}}" class="program {{program.acronym}} {{ 'hidden' if program.hidden == "true"}}">
    <div class="main-column-wide">
        <div class="program-info__image">
            <picture>
                <source srcset="/assets/images/{{ program.image }}.webp" type="image/webp"/>
                <source srcset="/assets/images/{{ program.image }}.jpg" type="image/jpeg"/>
                <img width="900" height="424" src="/assets/images/{{ program.image }}.jpg" alt="">
            </picture>
        </div>
        <div class="intro">
            <h2 class="heading-2 text-blue">{{ program.name }}</h2>
            <p class="intro-text"> {{ program.blurb }} </p>
        </div>

        {%- if program.stats.length -%}
        <div class="program-info__stats">

            {%- for stat in program.stats -%}
                <div class="stat">
                    <p>
                        <span class="number">{{ stat.number }}</span> <br aria-hidden="true">
                        <span class="text">{{ stat.text }}</span>
                    </p>
                </div>
            {%- endfor -%}

        </div>
        {%- endif -%}
    </div>
    
    <div class="main-column-wide program-quote">
        <img class="program-quote__icon" src="/assets/images/quotation-mark.svg" width="70" height="46" alt="" aria-hidden="true">
        <p class="program-quote__text fs-md text-white">{{ program.testimonial.quote }}</p>
        <div>
            <p class="ff-ndt fs-xsm text-white">{{ program.testimonial.name }}</p>
            {%- if program.testimonial.title -%}
            <p class="fs-xsm text-white">{{ program.testimonial.title }}</p>
            {%- endif -%}
            {%- if program.testimonial.credential -%}
            <p class="fs-xsm text-white">{{ program.testimonial.credential }}</p>
            {%- endif -%}
        </div>
    </div>
</section>
